<script src="../javascripts/js.cookie.js"></script>
<script>
    var valid = Cookies.get('isValid');

    if (typeof valid == 'undefined') {
        try {
            window.stop();
        }catch(e) {
           document.execCommand('Stop');
        }
        // redirect back to the login page
        document.location.replace('/login');
    }
</script>

